{
  "version": 1,
  "project": "Spotify-echo",
  "preferences": {
    "preferMCP": true,
    "continuous": true,
    "autoCloseSupersededPRs": true,
    "supersedePolicy": "afterCiGreen",
    "targetPR": 175,
    "supersededPRs": [149, 150, 151, 154]
  },
  "conflictResolutionRules": {
    "dependencies": "union; prefer highest compatible semver; refresh lockfile",
    "envConfig": "superset of keys with comments; avoid conflicting defaults",
    "routesMiddleware": "preserve auth and error ordering; no duplicates",
    "migrations": "ordered, idempotent; no duplicates",
    "modules": "prefer patterns consistent with current main; de-duplicate utilities",
    "docs": "merge intent; fix links/instructions"
  },
  "mcpServers": [
    { "id": "git", "type": "git", "features": ["branch", "merge", "rebase", "status"] },
    { "id": "fs", "type": "filesystem" },
    { "id": "node", "type": "command", "command": "node", "args": ["-v"] },
    { "id": "npm-ci", "type": "command", "command": "npm", "args": ["ci"] },
    { "id": "lint", "type": "command", "command": "npm", "args": ["run", "lint"] },
    { "id": "test", "type": "command", "command": "npm", "args": ["test", "--", "--ci"] },
    { "id": "build", "type": "command", "command": "npm", "args": ["run", "build"] },
    { "id": "docker", "type": "docker" },
    { "id": "gh", "type": "github", "scopes": ["repo", "pull_requests"] }
  ],
  "tasks": {
    "install": { "server": "npm-ci" },
    "lint": { "server": "lint" },
    "test": { "server": "test" },
    "build": { "server": "build" },
    "validate": { "sequence": ["install", "lint", "test", "build"] },
    "preflight": { "sequence": ["install", "validate"] }
  },
  "entryHooks": {
    "onSessionStart": ["preflight"],
    "beforeAnyEdit": ["validate"]
  }
}