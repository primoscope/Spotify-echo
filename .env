# EchoTune AI Development Environment Configuration
# Local development setup with mock services

# =============================================================================
# üöÄ CORE APPLICATION SETTINGS  
# =============================================================================

DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# =============================================================================
# üéµ SPOTIFY API CONFIGURATION
# =============================================================================

# Development/Demo credentials - replace with your own from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_dev_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_dev_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback
SPOTIFY_PRODUCTION_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# üîê SECURITY & AUTHENTICATION
# =============================================================================

# Development secrets (generate new for production)
SESSION_SECRET=dev_session_secret_change_in_production
JWT_SECRET=dev_jwt_secret_change_in_production

# Enable development mode for easier testing
AUTH_DEVELOPMENT_MODE=true

# =============================================================================
# üöÑ REDIS CONFIGURATION  
# =============================================================================

# Redis disabled for development (uses in-memory fallback)
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=echotune:dev:
REDIS_DEFAULT_TTL=1800
CACHE_TTL=1800

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================

# Use local MongoDB for development
MONGODB_URI=mongodb://localhost:27017/echotune_dev
MONGODB_DATABASE=echotune_dev
MONGODB_COLLECTION=listening_history

# =============================================================================
# ü§ñ AI/ML PROVIDER CONFIGURATION
# =============================================================================

# Use mock provider for development
LLM_PROVIDER=mock

# Optional - add your keys for testing
OPENAI_API_KEY=
GEMINI_API_KEY=

# =============================================================================
# üîß MCP SERVER CONFIGURATION
# =============================================================================

MCP_SERVER_PORT=3001

# =============================================================================
# üß™ DEVELOPMENT & TESTING
# =============================================================================

DEBUG=true
VERBOSE_LOGGING=true
ENABLE_CORS=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
