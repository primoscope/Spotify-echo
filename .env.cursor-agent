# Local Cursor Background Agent (no secrets committed)
CURSOR_BACKGROUND_AGENT=true
AGENT_YOLO_MODE=true
AGENT_CYCLE_INTERVAL_SEC=300
AGENT_STATUS_HEARTBEAT_INTERVAL=30
WORKFLOW_STATE_FILE=WORKFLOW_STATE.md
ROADMAP_FILE=ROADMAP.md
MCP_CONFIG_PATH=.cursor/mcp.json

# MCP servers
MCP_PERPLEXITY_ENABLED=true
MCP_BRAVE_SEARCH_ENABLED=true
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-online
PERPLEXITY_LOG=1
PERPLEXITY_FORCE_MODEL=1

# API keys (set in local shell or secret manager)
# export PERPLEXITY_API_KEY="<redacted>"
# export BRAVE_API_KEY="<redacted>"