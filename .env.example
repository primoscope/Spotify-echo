# EchoTune AI - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# üîß Core Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
DOMAIN=localhost
LOG_LEVEL=info

# =============================================================================
# üéµ Spotify API Configuration (REQUIRED)
# =============================================================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# üîê Security Configuration
# =============================================================================
JWT_SECRET=your_long_random_jwt_secret_here_min_32_chars
SESSION_SECRET=your_long_random_session_secret_here_min_32_chars

# =============================================================================
# üìä Database Configuration
# =============================================================================
# MongoDB
MONGODB_URI=mongodb://localhost:27017/echotune
MONGODB_USERNAME=echotune
MONGODB_PASSWORD=your_mongodb_password_here

# =============================================================================
# üîÑ Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# ü§ñ Optional AI/LLM Providers
# =============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=mock

# =============================================================================
# üìà Optional Observability & Analytics
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
AGENTOPS_API_KEY=your_agentops_api_key_here

# =============================================================================
# üîß Development & Testing
# =============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# üê≥ Docker & Deployment
# =============================================================================
DOCKER_REGISTRY=your_docker_registry_here
BUILD_VERSION=latest