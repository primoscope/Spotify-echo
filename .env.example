# EchoTune AI - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# üîß Core Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
DOMAIN=localhost
LOG_LEVEL=info

# =============================================================================
# üîê Security Configuration (REQUIRED)
# =============================================================================
JWT_SECRET=your_long_random_jwt_secret_here_min_32_chars
SESSION_SECRET=your_long_random_session_secret_here_min_32_chars
ENCRYPTION_KEY=your_32_char_encryption_key_here

# =============================================================================
# üéµ Spotify API Configuration (REQUIRED)
# =============================================================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# üìä Database Configuration (REQUIRED)
# =============================================================================
# MongoDB (Primary Database)
MONGODB_URI=mongodb://localhost:27017/echotune
MONGODB_DATABASE=echotune_production

# Redis (Caching & Sessions - Recommended for Production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# SQLite (Fallback)
SQLITE_DB_PATH=./data/echotune.db

# =============================================================================
# ü§ñ AI/LLM Providers (Optional)
# =============================================================================
# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google AI / Gemini (supports multiple keys for rotation)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY_1=your_gemini_api_key_1_here
GEMINI_API_KEY_2=your_gemini_api_key_2_here
GEMINI_API_KEY_3=your_gemini_api_key_3_here
GEMINI_API_KEY_4=your_gemini_api_key_4_here
GEMINI_API_KEY_5=your_gemini_api_key_5_here
GEMINI_API_KEY_6=your_gemini_api_key_6_here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-your_anthropic_api_key_here

# Perplexity AI
PERPLEXITY_API_KEY=pplx-your_perplexity_api_key_here

# OpenRouter (supports multiple keys)
OPENROUTER_API_KEY=sk-your_openrouter_api_key_here
OPENROUTER_API_KEY_1=sk-your_openrouter_api_key_1_here
OPENROUTER_API_KEY_2=sk-your_openrouter_api_key_2_here
OPENROUTER_API_KEY_3=sk-your_openrouter_api_key_3_here

# xAI Grok
XAI_API_KEY=your_xai_grok_api_key_here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here

# =============================================================================
# üîç Browser Automation & MCP (Optional)
# =============================================================================
# MCP Server Configuration
MCP_PORT=3001
MCP_SERVER_NAME=mcpHealth

# Browserbase (Browser Automation)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# Brave Search API
BRAVE_API_KEY=your_brave_search_api_key_here

# =============================================================================
# üìà Observability & Analytics (Optional)
# =============================================================================
# AgentOps Integration
AGENTOPS_API_KEY=your_agentops_api_key_here

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# üåê Web Configuration
# =============================================================================
# CORS & Frontend
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SSL Configuration
SSL_ENABLED=false

# =============================================================================
# üöÄ Deployment & DevOps (Optional)
# =============================================================================
# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# DigitalOcean
DIGITALOCEAN_API_TOKEN=dop_v1_your_digitalocean_api_token_here

# =============================================================================
# üîß Development & Features
# =============================================================================
# Feature Flags
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_DEMO_ROUTES=0
COMPRESSION=true

# Performance & Caching
CACHE_TTL=3600
RATE_LIMIT_MAX=100

# Development Flags
DEBUG=false