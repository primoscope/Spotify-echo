{
  "name": "echotune-mcp-servers",
  "version": "1.0.0",
  "description": "EchoTune AI MCP Server Ecosystem - Community-integrated servers for enhanced development workflow",
  "main": "index.js",
  "scripts": {
    "start": "node enhanced-mcp-orchestrator.js",
    "start:package-mgmt": "node mcp-servers/package-management/package-version-mcp.js",
    "start:code-sandbox": "node mcp-servers/code-sandbox/code-sandbox-mcp.js",
    "start:analytics": "node mcp-servers/analytics-server/analytics-mcp.js",
    "start:testing": "node mcp-servers/testing-automation/testing-automation-mcp.js",
    "start:filesystem": "node filesystem/index.js",
    "start:memory": "node memory/index.js",
    "start:github-repos": "node github-repos-manager/index.js", 
    "start:brave-search": "node brave-search/brave-search-mcp.js",
    "start:sequential-thinking": "node sequential-thinking/dist/index.js",
    "start:all": "concurrently \"npm run start:filesystem\" \"npm run start:memory\" \"npm run start:github-repos\" \"npm run start:brave-search\" \"npm run start:sequential-thinking\"",
    "test": "npm run test:all-servers",
    "test:all-servers": "node scripts/test-mcp-servers.js",
    "validate": "node scripts/validate-mcp-integration.js",
    "health-check": "node scripts/mcp-health-check.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "crypto": "^1.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "echotune",
    "spotify",
    "ai",
    "music-recommendation",
    "automation",
    "testing",
    "analytics",
    "package-management"
  ],
  "author": "EchoTune AI Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dzp5103/Spotify-echo.git"
  },
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": [
        "mcp-servers/filesystem/index.js"
      ],
      "description": "Secure file operations, directory management, and code analysis",
      "capabilities": [
        "file_operations",
        "directory_management", 
        "code_analysis",
        "secure_operations"
      ]
    },
    "memory": {
      "command": "node",
      "args": [
        "mcp-servers/memory/index.js"
      ],
      "description": "Persistent context across sessions and knowledge graph storage",
      "capabilities": [
        "persistent_context",
        "knowledge_graph",
        "conversation_history",
        "session_management"
      ]
    },
    "githubReposManager": {
      "command": "node", 
      "args": [
        "mcp-servers/github-repos-manager/index.js"
      ],
      "description": "GitHub repository management with 80+ GitHub tools and automation",
      "capabilities": [
        "github_automation",
        "repository_management",
        "issue_management", 
        "pull_requests"
      ]
    },
    "braveSearch": {
      "command": "node",
      "args": [
        "mcp-servers/brave-search/brave-search-mcp.js" 
      ],
      "description": "Privacy-focused web research with 2000 free queries per month",
      "capabilities": [
        "web_search",
        "privacy_search",
        "research",
        "documentation_search"
      ]
    },
    "sequentialThinking": {
      "command": "node",
      "args": [
        "mcp-servers/sequential-thinking/dist/index.js"
      ],
      "description": "Enhanced AI reasoning and step-by-step problem solving",
      "capabilities": [
        "reasoning",
        "step_by_step_thinking", 
        "problem_solving",
        "decision_making"
      ]
    },
    "packageManagement": {
      "command": "node",
      "args": [
        "mcp-servers/package-management/package-version-mcp.js"
      ],
      "description": "Automated package version management and security scanning",
      "capabilities": [
        "version-checking",
        "security-scanning",
        "dependency-updates"
      ]
    },
    "codeSandbox": {
      "command": "node",
      "args": [
        "mcp-servers/code-sandbox/code-sandbox-mcp.js"
      ],
      "description": "Secure code execution environment for TypeScript, JavaScript, and Python",
      "capabilities": [
        "code-execution",
        "validation",
        "testing"
      ]
    },
    "analytics": {
      "command": "node",
      "args": [
        "mcp-servers/analytics-server/analytics-mcp.js"
      ],
      "description": "Comprehensive analytics, telemetry, and performance monitoring",
      "capabilities": [
        "event-tracking",
        "performance-metrics",
        "user-analytics"
      ]
    },
    "testingAutomation": {
      "command": "node",
      "args": [
        "mcp-servers/testing-automation/testing-automation-mcp.js"
      ],
      "description": "Automated testing suite with unit, integration, API, and UI tests",
      "capabilities": [
        "unit-testing",
        "integration-testing",
        "api-testing",
        "ui-testing"
      ]
    }
  }
}
