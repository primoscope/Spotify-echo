{
  "mcpServers": {
    "mongodb-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "mongodb-mcp-server"
      ],
      "env": {
        "MONGODB_URI": "${MONGODB_URI}",
        "MONGODB_DB": "${MONGODB_DB}",
        "MONGODB_MCP_ALLOW_WRITE": "${MONGODB_MCP_ALLOW_WRITE}",
        "MONGODB_ALLOW_WRITE_UNTIL": "${MONGODB_ALLOW_WRITE_UNTIL}",
        "MONGODB_CHANGE_WINDOW_TAG": "${MONGODB_CHANGE_WINDOW_TAG}",
        "PROD_APPROVAL_TOKEN": "${PROD_APPROVAL_TOKEN}"
      }
    },
    "n8n-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "n8n-mcp"
      ],
      "env": {
        "N8N_BASE_URL": "${N8N_BASE_URL}",
        "N8N_API_KEY": "${N8N_API_KEY}"
      }
    },
    "brave-search-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@your-mcp/brave-search-server"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "website-screenshots-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@your-mcp/website-screenshots-server"
      ],
      "env": {
        "SCREENSHOT_ENGINE": "${SCREENSHOT_ENGINE}",
        "BROWSERBASE_API_KEY": "${BROWSERBASE_API_KEY}",
        "BROWSERBASE_PROJECT_ID": "${BROWSERBASE_PROJECT_ID}",
        "BROWSERBASE_WORKSPACE_ID": "${BROWSERBASE_WORKSPACE_ID}",
        "PLAYWRIGHT_BROWSERS_PATH": "${PLAYWRIGHT_BROWSERS_PATH}"
      }
    }
  }
}